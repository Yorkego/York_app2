<!DOCTYPE html>
<html>
  <head>
    <title>YorkApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="<%= posts_path %>">YorkApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="<%= new_post_path %>">Add new post</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= rails_admin_path %>">Admin</a>
          </li>
        </ul>

        <div class="navbar-nav float-right">
          <ul class="navbar-nav">
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to current_user.username, user_path(current_user.id), class: "nav-link"%>
                </li>
                <li class="nav-item">
                  <%= link_to t('common.log_out'), destroy_user_session_path, method: :delete, class: "nav-link" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to t('common.log_in'), new_user_session_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to t('common.sing_up'), new_user_registration_path, class: "nav-link" %>
                </li>
              <% end %>
              <li class="nav-item<%= " active" if I18n.locale == :ru %>">
                <%= link_to "Рус", { locale: :ru }, class: "nav-link" %>
              </li>
              <li class="nav-item<%= " active" if I18n.locale == :en %>">
                <%= link_to "En", { locale: :en }, class: "nav-link" %>
              </li>
            </ul>
      </div>

      </div>
    </nav>



    <div class="container main">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
            <div class="alert <%= bootstrap_class_for(name) %>">
              <button class="close" data-dismiss="alert">&times;</button>
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>

     <div class="row">
        <div class="col-md-9">
          <%= yield %>
        </div>
        <div class="col-md-3">

          <div class="tag_cloud">
            <h2><%= t('activerecord.attributes.post.all_tags')%></h2>
            <% tag_cloud(Tag.counts, %w{tag1 tag2 tag3 tag4 tag5}) do |tag, css_class| %>
              <%= link_to tag.name, tag_path(tag.name), class: css_class %>
            <% end %>
          </div>

          <br/>

          <div class="search">
            <h2><%= t('activerecord.attributes.post.search_in_posts')%></h2>
            <%= search_form_for @search, class: 'form-group my-2 my-lg-0' do |f| %>
              <div class="form-group">
                <%= f.label :title_or_content_cont, "Key word in title or content" %>
                <%= f.search_field :title_or_content_cont, class: "form-control mr-sm-2" %>
              </div>

              <div class="form-group">
                <%= f.label :user_username_start, "Avtor of post" %>
                <%= f.search_field :user_username_start,  class: "form-control mr-sm-2" %>
              </div>

              <div class="form-group">
                <%= f.label :tags_id_in, "Tags" %>
                <%= f.collection_select :tags_id_in, Tag.all, :id, :name, { }, { :multiple => true, class: "form-control mr-sm-2" } %>
              </div>

              <%= f.submit "Search", class: "btn btn-success my-2 my-sm-0"%>
            <% end %>

          </div>


        </div>
      </div>

     </div>


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
  </body>
</html>
