<!DOCTYPE html>
<html>
  <head>
    <title>YorkApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="<%= posts_path %>">Posts</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_post_path %>">Add new post</a>
          </li>
        </ul>
            <% if user_signed_in? %>

              Hello, <%= current_user.username %> | <%= link_to 'Sing Out', destroy_user_session_path, method: :delete, class: "nav-link"  %>

            <% else%>

              <%= link_to 'Sing In', new_user_session_path, class: "nav-link" %> 

            <%end%>
         
        
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>

       
    
    <div class="container main">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
            <div class="alert alert-<%= name %>">
              <button class="close" data-dismiss="alert">&times;</button>
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>
     <div class="row">
      <div class="col-md-9">
        <%= yield %>
      </div>
     </div>
     </div>
  </body>
</html>
