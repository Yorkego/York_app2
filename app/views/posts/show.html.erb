<article class="post">
	<section class="post-head">
		<h1><%= @post.title %></h1>
		<small>
			<time><%= @post.created_at.to_date.strftime("%d %B, %Y")%></time>
			posted by <%= link_to @post.user.username, edit_post_path(@post) %>	
			<% if current_user && @post.user.username == current_user.username  %>
				|
				<%= link_to t('common.edit'), edit_post_path(@post) %>
				|
				<%= link_to t('common.delete'), post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
			<% end %>
		</small>
	</section>
	<section class="post-content">
		<%= image_tag @post.image.url(:large), class: 'img-show' if @post.image? %>
		<%= @post.content %>
	</section>
	<section class="footer-content">		
		<%= raw @post.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-primary' }.join(' ') %>
		<span class="float-right">
			<%= link_to (like_post_path(@post)), method: :put, class: 'btn' do %>
				<span class="glyphicon">
					<p style="font-size: 1.4em">&#9829;  <%= @post.get_upvotes.size %></p>
				</span>
			<% end %>
		</span>
	</section>
</article>
 
<%= render 'disqus' %>