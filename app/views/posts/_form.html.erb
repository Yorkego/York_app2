<%= form_for @post, html: { multipart: true } do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h5><%= t('common.errors') %></h5>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :content %>
    <input id="x" type="hidden" name="content">
    <trix-editor class="trix-content" input="x"></trix-editor>
  </div>

  <div class="field form-group">
    <%= form.label :tag_list, "Tags (separated by commas)" %>
    <%= form.text_field :tag_list, class: 'form-control'  %>
  </div>


  <div class="field form-group">
    <%= form.label :image %>
    <%= form.file_field :image, class: 'form-control'  %>
  </div>

  <div class="actions form-group">
    <%= form.submit t('common.save'), class: 'btn btn-primary' %>
    <%= link_to t('common.back'), :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
